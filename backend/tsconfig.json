{
  "extends": "@tsconfig/node20/tsconfig.json",
  "ts-node": {
    "logError": true,
    "esm": true,
    "files": true
  },
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
